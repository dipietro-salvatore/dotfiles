[user]
	email = dipietro.salvatore@gmail.com 
	name = Salvatore Dipietro
[color]
		ui = auto
[core]
		filemode = false
		editor = vim
		excludesfile = /home/berker/dotfiles/global_gitignore
[status]
		showUntrackedFiles = no
[alias]
		di = diff
		lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
		st = status -unormal
		gsu = submodule update --init --recursive
		pr = !sh -c \"git fetch upstream pull/${1}/head:pr/${1} && git checkout pr/${1}\" -
[branch "master"]
		rebase = true
[help]
		autocorrect = 1
[push]
		default = tracking
[github]
		user = dipietro.salvatore
[rebase]
		autosquash = true
[branch]
		autosetuprebase = always
